            <dependency>
                <groupId>pl.pd.emir</groupId>
                <artifactId>kdpw-xml</artifactId>
                <version>${project.version}</version>
                <type>jar</type>
            </dependency>
            <dependency>
                <groupId>pl.pd.emir</groupId>
                <artifactId>ejb-api</artifactId>
                <version>${project.version}</version>
                <type>jar</type>      
            </dependency>                
            <dependency>
                <groupId>pl.pd.emir</groupId>
                <artifactId>ejb-impl</artifactId>
                <version>${project.version}</version>
                <type>ejb</type>            
            </dependency>
            
        </dependencies>
    </dependencyManagement>
</project>