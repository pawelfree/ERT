<?xml version="1.0"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xi="http://www.w3.org/2001/XInclude"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <name>emir_web</name>

    <application>
        <locale-config>
            <default-locale>pl</default-locale>
            <supported-locale>pl</supported-locale>
        </locale-config>
        <message-bundle>messages</message-bundle>
        <resource-bundle>
            <base-name>pl.pd.emir.resources.MultipleFilesResourceBundle</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>   
    
    <converter>
        <converter-for-class>java.lang.Enum</converter-for-class>
        <converter-class>javax.faces.convert.EnumConverter</converter-class>
    </converter>
    
    <converter>
        <converter-id>integerConverter</converter-id>
        <converter-class>pl.pd.emir.ing.register.bean.validators.IntegerConverter</converter-class>
    </converter>

    <navigation-rule>
        <navigation-case>
            <from-outcome>transactionList</from-outcome>
            <to-view-id>/pages/transactionList.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>transactionForm</from-outcome>
            <to-view-id>/pages/transactionForm.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>clientList</from-outcome>
            <to-view-id>/pages/clientList.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>clientForm</from-outcome>
            <to-view-id>/pages/clientForm.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>importPanel</from-outcome>
            <to-view-id>/pages/importPanel.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>importList</from-outcome>
            <to-view-id>/pages/importList.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>importListReport</from-outcome>
            <to-view-id>/pages/importListReport.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case> 
            <from-outcome>backToImportList</from-outcome>
            <to-view-id>/pages/importList.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/pages/home.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>kdpwList</from-outcome>
            <to-view-id>/pages/kdpwList.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>transactionsToKdpw</from-outcome>
            <to-view-id>/pages/transactionsToKdpw.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>eventLogList</from-outcome>
            <to-view-id>/pages/eventLogList.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>transactionHistory</from-outcome>
            <to-view-id>/pages/transactionHistory.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>clientHistory</from-outcome>
            <to-view-id>/pages/clientHistory.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>userList</from-outcome>
            <to-view-id>/pages/userList.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>userForm</from-outcome>
            <to-view-id>/pages/userForm.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>transactionTemplate</from-outcome>
            <to-view-id>/pages/transactionTemplate.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
        
    <factory>
        <exception-handler-factory>pl.pd.emir.client.utils.ExceptionHandlerFactory</exception-handler-factory>
    </factory>        
        
    <lifecycle>
        <phase-listener>pl.pd.emir.clientutils.listener.ValidateGrowlListener</phase-listener>
    </lifecycle>

    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.FileUploadRenderer</renderer-type>
            <renderer-class>pl.pd.emir.web.fileupload.FileUploadRenderer</renderer-class>
        </renderer>
    </render-kit>
</faces-config>
